<Page x:ConnectionId='1'
    x:Class="UsefulWeather.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UsefulWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid Background="LightGray">
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <RelativePanel>
                <TextBlock x:ConnectionId='34' Name="cityname_textblock"
                           FontSize="30"
                           RelativePanel.AlignLeftWithPanel="True"                          
                           Text="{Binding city.name}"/>
                <TextBlock x:ConnectionId='35' Name="temp_textblock"
                           FontSize="30"
                           RelativePanel.RightOf="cityname_textblock"
                           Margin="30,0,0,0"                          
                           Text="{Binding list[0].main.temp}"/>
                <TextBlock x:ConnectionId='36' Name="C_textblock"
                           FontSize="30"                          
                           RelativePanel.RightOf="temp_textblock"/>
                <TextBlock x:ConnectionId='37' Name="mainDec_textblock"
                           FontSize="30"
                           RelativePanel.Below="cityname_textblock"                       
                           Text="{Binding list[0].weather[0].description}"/>
                <Image x:ConnectionId='38' Name="main_Image"
                       Height="100"
                       Width="100"
                       RelativePanel.AlignRightWithPanel="True"/>
            </RelativePanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock x:ConnectionId='26' Name="Time_textblock"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:ConnectionId='27' Name="time1_textblock"
                               FontSize="22"
                               Text="{Binding list[1].dt_txt}"/>
                    <TextBlock x:ConnectionId='28' Name="time2_textblock"
                               FontSize="22"
                               Text="{Binding list[2].dt_txt}"/>
                    <TextBlock x:ConnectionId='29' Name="time3_textblock"
                               FontSize="22"
                               Text="{Binding list[3].dt_txt}"/>
                    <TextBlock x:ConnectionId='30' Name="time4_textblock"
                               FontSize="22"
                               Text="{Binding list[4].dt_txt}"/>
                    <TextBlock x:ConnectionId='31' Name="time5_textblock"
                               FontSize="22"
                               Text="{Binding list[5].dt_txt}"/>
                    <TextBlock x:ConnectionId='32' Name="time6_textblock"
                               FontSize="22"
                               Text="{Binding list[6].dt_txt}"/>
                    <TextBlock x:ConnectionId='33' Name="time7_textblock"
                               FontSize="22"
                               Text="{Binding list[7].dt_txt}"/>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <TextBlock x:ConnectionId='18' Name="Temp_textblock"
                               FontSize="20"
                               FontWeight="Bold"/>
                    <TextBlock x:ConnectionId='19' Name="temp1_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[1].main.temp}"/>
                    <TextBlock x:ConnectionId='20' Name="temp2_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[2].main.temp}"/>
                    <TextBlock x:ConnectionId='21' Name="temp3_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[3].main.temp}"/>
                    <TextBlock x:ConnectionId='22' Name="temp4_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[4].main.temp}"/>
                    <TextBlock x:ConnectionId='23' Name="temp5_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[5].main.temp}"/>
                    <TextBlock x:ConnectionId='24' Name="temp6_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[6].main.temp}"/>
                    <TextBlock x:ConnectionId='25' Name="temp7_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[7].main.temp}"/>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <TextBlock x:ConnectionId='10' Name="Dec_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"/>
                    <TextBlock x:ConnectionId='11' Name="dec1_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[1].weather[0].description}"/>
                    <TextBlock x:ConnectionId='12' Name="dec2_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[2].weather[0].description}"/>
                    <TextBlock x:ConnectionId='13' Name="dec3_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[3].weather[0].description}"/>
                    <TextBlock x:ConnectionId='14' Name="dec4_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[4].weather[0].description}"/>
                    <TextBlock x:ConnectionId='15' Name="dec5_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[5].weather[0].description}"/>
                    <TextBlock x:ConnectionId='16' Name="dec6_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[6].weather[0].description}"/>
                    <TextBlock x:ConnectionId='17' Name="dec7_textblock"
                               FontSize="22"
                               HorizontalAlignment="Center"
                               Text="{Binding list[7].weather[0].description}"/>
                </StackPanel>
                <StackPanel Margin="10,0,0,0">
                    <TextBlock x:ConnectionId='2' Name="Icon_textblock"
                               FontSize="20"
                               FontWeight="Bold"/>
                    <Image x:ConnectionId='3' Name="image1_image"
                           Height="30"
                           Width="30"/>
                    <Image x:ConnectionId='4' Name="image2_image"
                           Height="30"
                           Width="30"/>
                    <Image x:ConnectionId='5' Name="image3_image"
                           Height="30"
                           Width="30"/>
                    <Image x:ConnectionId='6' Name="image4_image"
                           Height="30"
                           Width="30"/>
                    <Image x:ConnectionId='7' Name="image5_image"
                           Height="30"
                           Width="30"/>
                    <Image x:ConnectionId='8' Name="image6_image"
                           Height="30"
                           Width="30"/>
                    <Image x:ConnectionId='9' Name="image7_image"
                           Height="30"
                           Width="30"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

