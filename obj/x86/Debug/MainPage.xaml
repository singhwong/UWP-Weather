<Page x:ConnectionId='1'
    x:Class="UsefulWeather.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UsefulWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid x:ConnectionId='2' Name="main_grid"
          VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:ConnectionId='3' Name="list_button"
                    Height="45"
                    Width="45"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE71D;"
                    FontSize="30"
                    Background="Gray"
                    Foreground="White"
                                             />
        <Button x:ConnectionId='4' Name="back_button"
                Height="45"
                Width="45"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE72B;"
                Margin="50,0,0,0"
                Foreground="White"
                Background="Gray"
                FontSize="30"
                                         />
        <TextBlock x:ConnectionId='5' Name="main_title"
                   Text="CurrentWeather"
                   FontSize="30"
                   Margin="100,0,0,0"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>
        <SplitView x:ConnectionId='6' Grid.Row="1"
                       Name="main_splitview"
                       DisplayMode="CompactInline"
                       CompactPaneLength="45"
                       OpenPaneLength="170">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListBox x:ConnectionId='7' Name="main_listbox"
                             SelectionMode="Single"
                             Background="Gray"
                                                                             >
                        <ListBoxItem x:ConnectionId='10' Name="listbox_itemone">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE80F;"
                                           FontSize="25"
                                           Margin="-2,0,0,0"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Home"
                                           FontSize="20"
                                           Foreground="White"
                                           Margin="20,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='11' Name="listbox_itemtwo">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE707;"
                                           FontSize="25"
                                           Margin="-2,0,0,0"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Location"
                                           FontSize="20"
                                           Foreground="White"
                                           Margin="20,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='12' Name="listbox_itemthree">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                       Text="&#xEC06;"
                                       FontSize="25"
                                       Margin="-2,0,0,0"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                                <TextBlock Text="City"
                                       FontSize="20"
                                       Foreground="White"
                                       Margin="20,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>

                    </ListBox>
                    <ListBox x:ConnectionId='8' Name="setting_listbox"
                             Grid.Row="1"
                                                                                >
                        <ListBoxItem x:ConnectionId='9' Name="listbox_itemSetting">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE713;"
                                           FontSize="25"
                                           Margin="-2,0,0,0"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Setting"
                                           FontSize="20"
                                           Foreground="White"
                                           Margin="20,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Grid>

            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel x:ConnectionId='13' Name="setting_stackPanel"
                                Orientation="Horizontal">
                        <TextBlock Text="BackGround Color"
                                       Foreground="White"
                                       Margin="100,0,0,0"
                                       VerticalAlignment="Center"/>
                        <ComboBox x:ConnectionId='16' Name="setting_combobox"
                                                                                          
                                      Margin="30,0,0,0"
                                      Width="150"
                                      HorizontalContentAlignment="Center"
                                      VerticalAlignment="Center">
                            <ComboBoxItem Content="Red"/>
                            <ComboBoxItem Content="SkyBlue"/>
                            <ComboBoxItem Content="Black"
                                                  IsSelected="True"/>
                            <ComboBoxItem Content="Gray"/>
                            <ComboBoxItem Content="LightGray"/>
                            <ComboBoxItem Content="WhiteSmoke"/>
                            <ComboBoxItem Content="DeepPink"/>
                        </ComboBox>
                    </StackPanel>
                    <ScrollViewer x:ConnectionId='14' Name="main_scrollViewer"
                                  HorizontalScrollMode="Auto"
                                  VerticalScrollMode="Auto"
                                  Grid.Row="1"
                                  HorizontalScrollBarVisibility="Visible">
                        <Frame x:ConnectionId='15' Name="main_frame"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        </Frame>

                    </ScrollViewer>
                    
                        <!--<ColorPicker x:Name="main_colorPicker"
                                         HorizontalAlignment="Left"
                                         Margin="100,0,0,0"
                                         Width="100"
                                         ColorSpectrumShape="Ring"
                                         IsColorPreviewVisible="False"
                                         IsColorChannelTextInputVisible="False"
                                         IsHexInputVisible="False"
                                         ColorChanged="main_colorPicker_ColorChanged"/>-->
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

