<Page x:ConnectionId='1'
    x:Class="UsefulWeather.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UsefulWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <Grid x:ConnectionId='2' Name="main_grid"
          VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:ConnectionId='27' Name="list_button"
                    Height="45"
                    Width="45"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE71D;"
                    FontSize="30"
                    Background="Gray"
                    Foreground="White"
                                             />
            <Button x:ConnectionId='28' Name="refresh_button"
                    Height="45"
                    Width="45"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xE72C;"
                    FontSize="25"
                    Margin="10,0,0,0"
                    Background="Gray"
                    Foreground="White"
                                                />
            <Button x:ConnectionId='29' Name="back_button"
                Height="45"
                Width="45"
                FontFamily="Segoe MDL2 Assets"
                Content="&#xE72B;"
                Margin="10,0,0,0"
                Foreground="White"
                Background="Gray"
                FontSize="30"
                                         />
            <TextBlock x:ConnectionId='30' Name="main_title"
                   Text="CurrentWeather"
                   FontSize="30"
                   Margin="30,0,0,0"
                   FontWeight="Bold"
                   Foreground="White"
                   VerticalAlignment="Center"/>
        </StackPanel>
       
        <SplitView x:ConnectionId='3' Grid.Row="1"
                       Name="main_splitview"
                       DisplayMode="CompactInline"
                       CompactPaneLength="45"
                       OpenPaneLength="170">
            <SplitView.Pane>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListBox x:ConnectionId='4' Name="main_listbox"
                             SelectionMode="Single"
                             Background="Gray"
                                                                             >
                        <ListBoxItem x:ConnectionId='9' Name="listbox_itemone">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:ConnectionId='16' Name="home_textblock" 
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE80F;"
                                           FontSize="25"
                                           Margin="-2,0,0,0"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:ConnectionId='17' Name="home_Text" 
                                           Text="Home"
                                           FontSize="20"
                                           Foreground="White"
                                           Margin="20,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='10' Name="listbox_itemtwo">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:ConnectionId='14' Name="location_textblock"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE707;"
                                           FontSize="25"
                                           Margin="-2,0,0,0"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:ConnectionId='15' Name="location_Text"
                                           Text="Location"
                                           FontSize="20"
                                           Foreground="White"
                                           Margin="20,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='11' Name="listbox_itemthree">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:ConnectionId='12' Name="city_textblock" 
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xEC06;"
                                           FontSize="25"
                                           Margin="-2,0,0,0"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:ConnectionId='13' Name="city_Text" 
                                           Text="City"
                                           FontSize="20"
                                           Foreground="White"
                                           Margin="20,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>

                    </ListBox>
                    <ListBox x:ConnectionId='5' Name="setting_listbox"
                             Grid.Row="1"
                                                                                >
                        <ListBoxItem x:ConnectionId='6' Name="listbox_itemSetting">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:ConnectionId='7' Name="setting_textblock"
                                           FontFamily="Segoe MDL2 Assets"
                                           Text="&#xE713;"
                                           FontSize="25"
                                           Margin="-2,0,0,0"
                                           Foreground="White"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:ConnectionId='8' Name="setting_Text"
                                           Text="Setting"
                                           FontSize="20"
                                           Foreground="White"
                                           Margin="20,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                </Grid>

            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel x:ConnectionId='18' Name="setting_stackPanel">
                        <StackPanel x:ConnectionId='21' Name="backGround_stackPanel"
                                Orientation="Horizontal">
                            <TextBlock x:ConnectionId='25' Name="backGround_textblock"
                                       Text="BackGround Color"
                                       Foreground="White"
                                       Margin="100,0,0,0"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:ConnectionId='26' Name="backGround_combobox"
                                                                                             
                                      Margin="30,0,0,0"
                                      Width="150"
                                      Background="White"
                                      HorizontalContentAlignment="Center"
                                      VerticalAlignment="Center">
                                <ComboBoxItem Content="Red"/>
                                <ComboBoxItem Content="SkyBlue"/>
                                <ComboBoxItem Content="Black"
                                              IsSelected="True"/>
                                <ComboBoxItem Content="Gray"/>
                                <ComboBoxItem Content="LightGray"/>
                                <ComboBoxItem Content="WhiteSmoke"/>
                                <ComboBoxItem Content="DeepPink"/>
                                <ComboBoxItem Content="antiqueWhite"/>
                                <ComboBoxItem Content="aqua"/>
                                <ComboBoxItem Content="azure"/>
                                <ComboBoxItem Content="coral"/>
                                <ComboBoxItem Content="brown"/>
                                <ComboBoxItem Content="darkViolet"/>
                                <ComboBoxItem Content="gold"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel x:ConnectionId='22' Name="foreGround_stackPanel"
                                    Orientation="Horizontal"
                                    Margin="0,10,0,0">
                            <TextBlock x:ConnectionId='23' Name="foreGround_textblock"
                                       Text="ForeGround Color"
                                       Foreground="White"
                                       Margin="100,0,0,0"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:ConnectionId='24' Name="foreGround_combobox"
                                                                                             
                                      Margin="30,0,0,0"
                                      Width="150"
                                      Background="White"
                                      HorizontalContentAlignment="Center"
                                      VerticalAlignment="Center">
                                <ComboBoxItem Content="Red"/>
                                <ComboBoxItem Content="SkyBlue"/>
                                <ComboBoxItem Content="Black"/>
                                <ComboBoxItem Content="Gray"/>
                                <ComboBoxItem Content="LightGray"/>
                                <ComboBoxItem Content="WhiteSmoke"
                                              IsSelected="True"/>
                                <ComboBoxItem Content="DeepPink"/>
                                <ComboBoxItem Content="antiqueWhite"/>
                                <ComboBoxItem Content="aqua"/>
                                <ComboBoxItem Content="azure"/>
                                <ComboBoxItem Content="coral"/>
                                <ComboBoxItem Content="brown"/>
                                <ComboBoxItem Content="darkViolet"/>
                                <ComboBoxItem Content="gold"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                    
                    <ScrollViewer x:ConnectionId='19' Name="main_scrollViewer"
                                  HorizontalScrollMode="Auto"
                                  VerticalScrollMode="Auto"
                                  Grid.Row="1"
                                  HorizontalScrollBarVisibility="Visible">
                        <Frame x:ConnectionId='20' Name="main_frame"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center">
                        </Frame>

                    </ScrollViewer>
                    
                        <!--<ColorPicker x:Name="main_colorPicker"
                                         HorizontalAlignment="Left"
                                         Margin="100,0,0,0"
                                         Width="100"
                                         ColorSpectrumShape="Ring"
                                         IsColorPreviewVisible="False"
                                         IsColorChannelTextInputVisible="False"
                                         IsHexInputVisible="False"
                                         ColorChanged="main_colorPicker_ColorChanged"/>-->
                </Grid>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

