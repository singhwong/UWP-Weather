<Page
    x:Class="UsefulWeather.CityPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UsefulWeather"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="DictionaryTextBlock.xaml"/>
                <ResourceDictionary Source="DictionaryImage.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Input CityName"
                           FontSize="20"
                           Foreground="White"
                           VerticalAlignment="Center"/>
            <TextBox x:ConnectionId='57' Name="cityname_textbox"
                         Width="150"
                         Background="White"
                         Margin="10"/>
            <Button x:ConnectionId='58' Name="cityname_button"
                        Width="110"
                        Background="Pink"
                        Foreground="White"
                        Content="Get Weather"
                                                     />
        </StackPanel>
        <RelativePanel>
            <TextBlock x:ConnectionId='42' Name="country_textblock"
                       FontSize="30"
                       Foreground="LightBlue"
                       FontWeight="Bold"
                       RelativePanel.AlignTopWithPanel="True"
                       Text="{Binding city.country}"/>
            <TextBlock x:ConnectionId='43' Name="cityname_textblock"
                           FontSize="30"
                           Foreground="LightBlue"
                           FontWeight="Bold"
                           RelativePanel.Below="country_textblock"
                           RelativePanel.AlignLeftWithPanel="True"                          
                           Text="{Binding city.name}"/>
            <TextBlock x:ConnectionId='44' Name="temp_textblock"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="LightBlue"
                           RelativePanel.Below="country_textblock"
                           RelativePanel.RightOf="cityname_textblock"
                           Margin="30,0,0,0"                          
                           Text="{Binding list[0].main.temp}"/>
            <TextBlock x:ConnectionId='45' Name="C_textblock"
                           FontSize="30"
                           FontWeight="Bold"
                           Foreground="White"
                           RelativePanel.Below="country_textblock"
                           RelativePanel.RightOf="temp_textblock"/>
            <TextBlock x:ConnectionId='46' Name="mainDec_textblock"
                           FontSize="30"
                           Foreground="LightBlue"
                           RelativePanel.Below="cityname_textblock"                        
                           Text="{Binding list[0].weather[0].description}"/>
            <TextBlock x:ConnectionId='47' Name="mainMaxTem_String"
                           FontSize="20"
                           Foreground="White"
                           RelativePanel.Below="mainDec_textblock"/>
            <TextBlock x:ConnectionId='48' Name="mainMaxTem_textblock"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="LightBlue"
                           RelativePanel.RightOf="mainMaxTem_String"
                           RelativePanel.Below="mainDec_textblock"
                           Margin="10,0,0,0"
                           Text="{Binding list[0].main.temp_max}"/>
            <TextBlock x:ConnectionId='49' Name="MaxTempC_textblock"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           RelativePanel.RightOf="mainMaxTem_textblock"
                           RelativePanel.Below="mainDec_textblock"/>
            <TextBlock x:ConnectionId='50' Name="mainMinTem_String"
                           FontSize="20"
                           Foreground="White"
                           RelativePanel.Below="mainMaxTem_String"/>
            <TextBlock x:ConnectionId='51' Name="mainMinTem_textblock"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="LightBlue"
                           Margin="10,0,0,0"
                           RelativePanel.RightOf="mainMinTem_String"
                           RelativePanel.Below="mainMaxTem_String"
                           Text="{Binding list[0].main.temp_min}"/>
            <TextBlock x:ConnectionId='52' Name="MinTempC_textblock"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           RelativePanel.RightOf="mainMinTem_textblock"
                           RelativePanel.Below="mainMaxTem_String"/>
            <TextBlock x:ConnectionId='53' Name="mainWindSpeed_String"
                           FontSize="20"
                           Foreground="White"
                           RelativePanel.Below="mainMinTem_String"/>
            <TextBlock x:ConnectionId='54' Name="mainWindSpeed_textblock"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="LightBlue"
                           RelativePanel.Below="mainMinTem_textblock"
                           RelativePanel.RightOf="mainWindSpeed_String"
                           Margin="10,0,0,0"
                           Text="{Binding list[0].wind.speed}"/>
            <TextBlock x:ConnectionId='55' Name="WindSpeedUnit_String"
                           FontSize="20"
                           Foreground="White"
                           RelativePanel.Below="mainMinTem_String"
                           RelativePanel.RightOf="mainWindSpeed_textblock"/>
            <Image x:ConnectionId='56' Name="main_Image"
                       Height="200"
                       Width="200"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       RelativePanel.AlignRightWithPanel="True"/>
        </RelativePanel>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock x:ConnectionId='34' Name="Time_textblock"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"/>
                <TextBlock x:ConnectionId='35' Name="time1_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[1].dt_txt}"/>
                <TextBlock x:ConnectionId='36' Name="time2_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[2].dt_txt}"/>
                <TextBlock x:ConnectionId='37' Name="time3_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[3].dt_txt}"/>
                <TextBlock x:ConnectionId='38' Name="time4_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[4].dt_txt}"/>
                <TextBlock x:ConnectionId='39' Name="time5_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[5].dt_txt}"/>
                <TextBlock x:ConnectionId='40' Name="time6_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[6].dt_txt}"/>
                <TextBlock x:ConnectionId='41' Name="time7_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[7].dt_txt}"/>
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <TextBlock x:ConnectionId='26' Name="Temp_textblock"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="Bold"/>
                <TextBlock x:ConnectionId='27' Name="temp1_textblock"
                               Style="{StaticResource textblock_style1}"
                               Text="{Binding list[1].main.temp}"/>
                <TextBlock x:ConnectionId='28' Name="temp2_textblock"
                               Style="{StaticResource textblock_style1}"
                               Text="{Binding list[2].main.temp}"/>
                <TextBlock x:ConnectionId='29' Name="temp3_textblock"
                               Style="{StaticResource textblock_style1}"
                               Text="{Binding list[3].main.temp}"/>
                <TextBlock x:ConnectionId='30' Name="temp4_textblock"
                               Style="{StaticResource textblock_style1}"
                               Text="{Binding list[4].main.temp}"/>
                <TextBlock x:ConnectionId='31' Name="temp5_textblock"
                               Style="{StaticResource textblock_style1}"
                               Text="{Binding list[5].main.temp}"/>
                <TextBlock x:ConnectionId='32' Name="temp6_textblock"
                               Style="{StaticResource textblock_style1}"
                               Text="{Binding list[6].main.temp}"/>
                <TextBlock x:ConnectionId='33' Name="temp7_textblock"
                               Style="{StaticResource textblock_style1}"
                               Text="{Binding list[7].main.temp}"/>
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <TextBlock x:ConnectionId='18' Name="Dec_textblock"
                               FontSize="22"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"/>
                <TextBlock x:ConnectionId='19' Name="dec1_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[1].weather[0].description}"/>
                <TextBlock x:ConnectionId='20' Name="dec2_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[2].weather[0].description}"/>
                <TextBlock x:ConnectionId='21' Name="dec3_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[3].weather[0].description}"/>
                <TextBlock x:ConnectionId='22' Name="dec4_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[4].weather[0].description}"/>
                <TextBlock x:ConnectionId='23' Name="dec5_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[5].weather[0].description}"/>
                <TextBlock x:ConnectionId='24' Name="dec6_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[6].weather[0].description}"/>
                <TextBlock x:ConnectionId='25' Name="dec7_textblock"
                           Style="{StaticResource textblock_style1}"
                           Text="{Binding list[7].weather[0].description}"/>
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <TextBlock x:ConnectionId='10' Name="Icon_textblock"
                               FontSize="20"
                               Foreground="White"
                               FontWeight="Bold"/>
                <Image x:ConnectionId='11' Name="image1_image"
                       Style="{StaticResource iamge_style}"/>
                <Image x:ConnectionId='12' Name="image2_image"
                       Style="{StaticResource iamge_style}"/>
                <Image x:ConnectionId='13' Name="image3_image"
                       Style="{StaticResource iamge_style}"/>
                <Image x:ConnectionId='14' Name="image4_image"
                       Style="{StaticResource iamge_style}"/>
                <Image x:ConnectionId='15' Name="image5_image"
                       Style="{StaticResource iamge_style}"/>
                <Image x:ConnectionId='16' Name="image6_image"
                       Style="{StaticResource iamge_style}"/>
                <Image x:ConnectionId='17' Name="image7_image"
                       Style="{StaticResource iamge_style}"/>
            </StackPanel>
        </StackPanel>
    </StackPanel>
        <StackPanel Orientation="Horizontal"
                    Grid.Row="1"
                    Margin="0,30,0,0"
                    HorizontalAlignment="Center">
            <Button x:ConnectionId='3' Name="white_button"
                    Background="White"
                    Height="10"
                    Width="30"
                                              />
            <Button x:ConnectionId='4' Name="black_button"
                    Background="Black"
                    Height="10"
                    Width="30"
                                              />
            <Button x:ConnectionId='5' Name="skyblue_button"
                    Background="SkyBlue"
                    Height="10"
                    Width="30"
                                                />
            <Button x:ConnectionId='6' Name="aliceblue_button"
                    Background="AliceBlue"
                    Height="10"
                    Width="30"
                                                  />
            <Button x:ConnectionId='7' Name="lightgray_button"
                    Background="LightGray"
                    Height="10"
                    Width="30"
                                                    />
            <Button x:ConnectionId='8' Name="lightblue_button"
                    Background="LightBlue"
                    Height="10"
                    Width="30"
                                                  />
            <Button x:ConnectionId='9' Name="lightcoral_button"
                    Background="LightCoral"
                    Height="10"
                    Width="30"
                                                   />
        </StackPanel>
        <ProgressRing x:ConnectionId='2' Name="city_progressring"
                      Height="100"
                      Width="100"
                      Grid.RowSpan="2"
                      Foreground="SkyBlue"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"/>
    </Grid>
</Page>

